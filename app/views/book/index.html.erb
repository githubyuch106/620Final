    <div class="container-fluid">
        <div class="row-fluid">
        <div class="span2">
        <!--Sidebar content-->
        </div>
        <div class="span10">

      
                <div class="container-fluid">
                <!-- ROW 1 -->

                
                    <% count=0; flag = false %>
                    <div class="row">
                        <% @books.each do |book| %>
                          <% if(flag == true) %>
                                    <!-- </div> -->
                                    <div class="row">
                                    <% flag = false %>
                          <% end %>
                            <div class="col-sm-3 col-xs-3">
                                <!-- PRODUCT NAME -->
                                <p><center><%= book.title %></center></p>
                                <a data-lightbox="photos" data-toggle="modal" data-target="#myModal" data-name="<%= book.title %>" data-picture="<%= book.picture %>.jpg" data-year="<%= book.year %>" > 

                                    <img class="img-thumbnail" style="cursor: pointer;"  src="<%= book.picture %>" width="300" height="200">
                                </a>

                                <br>

                                <a href="/book/checkout?name=<%= book.title %>">Checkout this Book</a>

                                
                            </div>

                            <% count = count.to_i + 1 %>

                            <% if(count % 4 == 0) %>
                              </div>
                              <% flag = true %>
                              <% count = 0 %>
                            <% end %>

                            
                        <%end%>   
                    <!-- </div> -->

                    <hr>

                
                </div>



                

                
                <div id="myModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                          
                     
        </div>
  </div>

<script type="text/javascript">
  $(document).ready(function () {
    $('#myModal').on('show.bs.modal', function (event) { // id of the modal with event
      var button = $(event.relatedTarget) // Button that triggered the modal
      
      var bookname = button.data('name')
      var bookpicture = button.data('picture')
      var bookyear = button.data('year')
      
      
      // Update the modal's content.
      var modal = $(this)
      //modal.find('.modal-title').text(title)
      modal.find('.modal-body').text(bookname)
           
      modal.find('.modal-body').append('<img id="myimage" class="img-responsive" width="300" height="200">')

      modal.find('.modal-body').append('<h3>Book Year</h3> <p id="year"</p>')

     
      $('#myimage').attr("src",bookpicture)
      $('#year').text(bookyear)
      
      
    })
  })
</script>
