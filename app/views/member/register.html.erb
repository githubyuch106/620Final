<div class="row login-panel">
        <div class="col-md-4"></div>
        <div class="col-md-4 col-sm-6 col-xs-10 centered">
            <div class="center-block text-center"><img src="/assets/logo_04.png" width = "50px" height = "50px" alt="Register Logo" /></div>
            <div class="panel panel-green z-depth-1">
                <div class="panel-heading">
                    <h3 class="panel-title"> Registration </h3>
                </div>
                <div class="panel-body">

                    <div id="signUpError" role="alert" class="alert hidden"></div>

                    <form role="form" class="loginForm" id="signUpForm">
                        <fieldset>

                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="First Name" name="firstName" type="text" id="firstName" required>
                                <span><i class="fa fa-user"></i></span>
                            </div>

                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="Last Name" name="lastName" type="text" id="lastName" required>
                                <span><i class="fa fa-user"></i></span>
                            </div>


                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="E-mail address" name="email" type="email" id="email" required>
                                <span><i class="fa fa-user"></i></span>
                            </div>
                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="" id="password" required>
                                <span><i class="fa fa-lock"></i></span>
                            </div>

                            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="Confirm Password" name="confirm_password" type="password" value="" id="confirm_password" required>
                                <span><i class="fa fa-lock"></i></span>
                            </div>

                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="Address" name="address" type="text" value="" id="address" required>
                                <span><i class="fa fa-lock"></i></span>
                            </div>

                            
                            
                            <div class="form-group icoFix">
                                <input class="form-control" placeholder="Contact No" name="contact" type="text" value="" id="contact" required>
                                <span><i class="fa fa-lock"></i></span>
                            </div>

                            <div class="clearfix">

                                <input type="submit" value="Register" class="btn btn-success pull-right rippler rippler-default"/>
                            </div>

                            

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
</div>

<script src="/assets/register.js" type="text/javascript"></script>
